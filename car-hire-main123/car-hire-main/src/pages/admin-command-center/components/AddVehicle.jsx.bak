import React, { useState, useRef, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import Icon from '../../../components/AppIcon';
import { useVehicles } from '../../../contexts/VehicleContext';

// Notification component
const Notification = ({ message, type, onClose }) => {
  useEffect(() => {
    const timer = setTimeout(onClose, 5000); // Auto hide after 5 seconds
    return () => clearTimeout(timer);
  }, [onClose]);

  return (
    <div className={`fixed top-4 right-4 p-4 rounded-lg shadow-lg ${
      type === 'success' ? 'bg-green-500' : 'bg-red-500'
    } text-white z-50 flex items-center gap-2 animate-fade-in`}>
      <span>{message}</span>
      <button onClick={onClose} className="ml-2 hover:opacity-80">
        Ã—
      </button>
    </div>
  );
};

const AddVehicle = () => {
  const navigate = useNavigate();
  const { addVehicle } = useVehicles();
  const fileInputRef = useRef(null);
  const [errors, setErrors] = useState({});
  
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [showSuccessMessage, setShowSuccessMessage] = useState(false);
  const [notification, setNotification] = useState(null);
  const [vehicleData, setVehicleData] = useState({
    make: '',
    model: '',
    year: new Date().getFullYear(),
    type: 'Sedan', // Changed from category to type to match schema
    price: '',
    features: [],
    transmission: 'Automatic',
    seats: '',
    description: '',
    fuelType: 'Petrol',
    status: 'available'
  });
  
  const [images, setImages] = useState([]);
  const [previewUrls, setPreviewUrls] = useState([]);
  const [errors, setErrors] = useState({});

  const validateForm = () => {
    const newErrors = {};
    if (!vehicleData.make || !vehicleData.model) newErrors.name = 'Vehicle name is required';
    if (!vehicleData.type) newErrors.type = 'Vehicle type is required';
    if (!vehicleData.price) newErrors.price = 'Price is required';
    if (!vehicleData.seats) newErrors.seats = 'Number of seats is required';
    if (!vehicleData.transmission) newErrors.transmission = 'Transmission type is required';
    if (!vehicleData.fuelType) newErrors.fuelType = 'Fuel type is required';
    if (images.length === 0) newErrors.images = 'At least one image is required';
    
    // Price validation
    const price = Number(vehicleData.price);
    if (isNaN(price) || price <= 0) {
      newErrors.price = 'Price must be a valid positive number';
    }
    
    setErrors(newErrors);
    return Object.keys(newErrors).length === 0;
  };

    const handleSubmit = async (e) => {
    e.preventDefault();
    setErrors({});
    
    if (!validateForm()) {
      setNotification({
        type: 'error',
        message: 'Please fill in all required fields correctly'
      });
      return;
    }
    
    setIsSubmitting(true);
    
    try {
      // Prepare the data object with all required fields
      const submitData = {
        ...vehicleData,
        name: `${vehicleData.make} ${vehicleData.model}`,
        specifications: {
          seats: parseInt(vehicleData.seats),
          transmission: vehicleData.transmission,
          fuelType: vehicleData.fuelType
        },
        images: images
      };
      
      console.log('Submitting vehicle data...');
      const result = await addVehicle(submitData);
      
      // Show success notification
      setNotification({
        type: 'success',
        message: `${vehicleData.make} ${vehicleData.model} has been successfully added!`
      });
      
      // Reset form after successful submission
      setVehicleData({
        make: '',
        model: '',
        year: new Date().getFullYear(),
        type: 'Sedan',
        price: '',
        features: [],
        transmission: 'Automatic',
        seats: '',
        description: '',
        fuelType: 'Petrol',
        status: 'available'
      });
      setImages([]);
      setPreviewUrls([]);
      
    } catch (error) {
      console.error('Error submitting form:', error);
      let errorMessage = 'Failed to add vehicle. ';
      
      if (error.message.includes('Failed to fetch') || error.message.includes('Network')) {
        errorMessage += 'Please check your internet connection and try again.';
      } else {
        errorMessage += error.message || 'Please try again later.';
      }
      
      setNotification({
        type: 'error',
        message: errorMessage
      });
      
    } finally {
      setIsSubmitting(false);
    }
  };

  const handleChange = (e) => {
    const { name, value } = e.target;
    setVehicleData(prev => ({
      ...prev,
      [name]: value
    }));
    // Clear error when field is edited
    if (errors[name]) {
      setErrors(prev => ({
        ...prev,
        [name]: undefined
      }));
    }
  };

  const handleImageChange = async (e) => {
    console.log('Image change event triggered');
    
    // Get the file from input or drop event
    const file = e.target.files?.[0] || e.dataTransfer?.files?.[0];
    if (!file) {
      console.log('No file selected');
      return;
    }
    
    // Validate file type and size
    if (!file.type.startsWith('image/')) {
      alert('Please only upload image files!');
      return;
    }
    
    if (file.size > 5 * 1024 * 1024) { // 5MB limit
      alert('Image file size must be less than 5MB!');
      return;
    }

    console.log('Selected image:', file.name, 'Size:', file.size);
    
    // Create preview URL
    const url = URL.createObjectURL(file);
    setPreviewUrls([url]); // Only store one preview URL
    setImages([file]); // Only store one image
    
    // Clear any previous image-related errors
    if (errors.images) {
      setErrors(prev => ({
        ...prev,
        images: undefined
      }));
    }
  };

  const removeImage = (index) => {
    setImages(prev => prev.filter((_, i) => i !== index));
    setPreviewUrls(prev => {
      // Revoke the URL to prevent memory leaks
      if (prev[index].startsWith('blob:')) {
        URL.revokeObjectURL(prev[index]);
      }
      return prev.filter((_, i) => i !== index);
    });
  };

  const handleDragOver = (e) => {
    e.preventDefault();
    e.currentTarget.classList.add('border-blue-500');
  };

  const handleDragLeave = (e) => {
    e.preventDefault();
    e.currentTarget.classList.remove('border-blue-500');
  };

  const handleDrop = (e) => {
    e.preventDefault();
    e.currentTarget.classList.remove('border-blue-500');
    handleImageChange(e);
  };

  const vehicleCategories = [
    'Sedan', 'SUV', 'Van', 'Luxury', 'Sports', 'Electric', 'Hybrid'
  ];

  return (
    <div className="max-w-4xl mx-auto py-8">
      {notification && (
        <Notification
          message={notification.message}
          type={notification.type}
          onClose={() => setNotification(null)}
        />
      )}
      
      {/* Header Section */}
      <div className="flex items-center justify-between mb-8">
        <div>
          <h2 className="text-2xl font-bold text-cosmic-depth">Add New Vehicle</h2>
          <p className="text-text-refined mt-1">Enter the details of the new vehicle</p>
        </div>
        <button
          onClick={() => navigate(-1)}
          className="p-2 text-text-refined hover:text-cosmic-depth"
        >
          <Icon name="X" size={24} />
        </button>
      </div>

      {/* Main Content Section */}
      <div className="mt-8">
        {!showSuccessMessage ? (
          // Form section when adding a new vehicle
          <form onSubmit={handleSubmit} className="space-y-6">
            {/* Vehicle form fields will go here */}
        <form onSubmit={handleSubmit} className="space-y-6">
          {/* Notification will appear here when needed */}
      {/* Main Form */}
      <div className="mt-8">
        {!showSuccessMessage ? (
          <form onSubmit={handleSubmit} className="space-y-8">
        {/* Basic Information */}
        <div className="bg-white rounded-xl p-6 premium-shadow border border-gray-100">
          <h3 className="text-lg font-semibold text-cosmic-depth mb-4">Basic Information</h3>
          {/* Description field */}
          <div className="mb-6">
            <label className="block text-sm font-medium text-text-charcoal mb-2">
              Description (Optional)
            </label>
            <textarea
              name="description"
              value={vehicleData.description}
              onChange={handleChange}
              className={`w-full px-4 py-2 rounded-lg border ${
                errors.description ? 'border-error' : 'border-gray-200'
              } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
              placeholder="Enter vehicle description..."
              rows="4"
            />
            {errors.description && (
              <p className="mt-1 text-sm text-error">{errors.description}</p>
            )}
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Make
              </label>
              <input
                type="text"
                name="make"
                value={vehicleData.make}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.make ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
                placeholder="e.g., Mercedes-Benz"
              />
              {errors.make && (
                <p className="mt-1 text-sm text-error">{errors.make}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Model
              </label>
              <input
                type="text"
                name="model"
                value={vehicleData.model}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.model ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
                placeholder="e.g., S-Class"
              />
              {errors.model && (
                <p className="mt-1 text-sm text-error">{errors.model}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Year
              </label>
              <input
                type="number"
                name="year"
                value={vehicleData.year}
                onChange={handleChange}
                className="w-full px-4 py-2 rounded-lg border border-gray-200 focus:ring-2 focus:ring-stellar-gold focus:border-transparent"
                min={1900}
                max={new Date().getFullYear() + 1}
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Type
              </label>
              <select
                name="type"
                value={vehicleData.type}
                onChange={handleChange}
                className="w-full px-4 py-2 rounded-lg border border-gray-200 focus:ring-2 focus:ring-stellar-gold focus:border-transparent"
              >
                {vehicleCategories.map(category => (
                  <option key={category} value={category}>{category}</option>
                ))}
              </select>
            </div>
          </div>
        </div>

        {/* Vehicle Details */}
        <div className="bg-white rounded-xl p-6 premium-shadow border border-gray-100">
          <h3 className="text-lg font-semibold text-cosmic-depth mb-4">Vehicle Details</h3>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Daily Rate (KES)
              </label>
              <input
                type="number"
                name="price"
                value={vehicleData.price}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.price ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
                placeholder="e.g., 15000"
              />
              {errors.price && (
                <p className="mt-1 text-sm text-error">{errors.price}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Location
              </label>
              <input
                type="text"
                name="location"
                value={vehicleData.location}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.location ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
                placeholder="e.g., Nairobi CBD"
              />
              {errors.location && (
                <p className="mt-1 text-sm text-error">{errors.location}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Number of Seats
              </label>
              <input
                type="number"
                name="seats"
                value={vehicleData.seats}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.seats ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
                min={1}
                placeholder="e.g., 5"
              />
              {errors.seats && (
                <p className="mt-1 text-sm text-error">{errors.seats}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Transmission
              </label>
              <select
                name="transmission"
                value={vehicleData.transmission}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.transmission ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
              >
                <option value="Automatic">Automatic</option>
                <option value="Manual">Manual</option>
              </select>
              {errors.transmission && (
                <p className="mt-1 text-sm text-error">{errors.transmission}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Fuel Type
              </label>
              <select
                name="fuelType"
                value={vehicleData.fuelType}
                onChange={handleChange}
                className={`w-full px-4 py-2 rounded-lg border ${
                  errors.fuelType ? 'border-error' : 'border-gray-200'
                } focus:ring-2 focus:ring-stellar-gold focus:border-transparent`}
              >
                <option value="Petrol">Petrol</option>
                <option value="Diesel">Diesel</option>
                <option value="Hybrid">Hybrid</option>
                <option value="Electric">Electric</option>
              </select>
              {errors.fuelType && (
                <p className="mt-1 text-sm text-error">{errors.fuelType}</p>
              )}
            </div>
            <div>
              <label className="block text-sm font-medium text-text-charcoal mb-2">
                Status
              </label>
              <select
                name="status"
                value={vehicleData.status}
                onChange={handleChange}
                className="w-full px-4 py-2 rounded-lg border border-gray-200 focus:ring-2 focus:ring-stellar-gold focus:border-transparent"
              >
                <option value="available">Available</option>
                <option value="maintenance">In Maintenance</option>
                <option value="reserved">Reserved</option>
              </select>
            </div>
          </div>

          <div className="mt-6">
            <label className="block text-sm font-medium text-text-charcoal mb-2">
              Description
            </label>
            <textarea
              name="description"
              value={vehicleData.description}
              onChange={handleChange}
              rows={4}
              className="w-full px-4 py-2 rounded-lg border border-gray-200 focus:ring-2 focus:ring-stellar-gold focus:border-transparent"
              placeholder="Enter vehicle description..."
            />
          </div>
        </div>

        {/* Images */}
        <div className="bg-white rounded-xl p-6 premium-shadow border border-gray-100">
          <h3 className="text-lg font-semibold text-cosmic-depth mb-4">Vehicle Images</h3>
          
          <div className="flex items-center justify-center w-full">
            <label 
              className="w-full flex flex-col items-center justify-center px-4 py-6 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 cursor-pointer hover:bg-gray-100"
              onDragOver={handleDragOver}
              onDragLeave={handleDragLeave}
              onDrop={handleDrop}
            >
              <div className="flex flex-col items-center justify-center pt-5 pb-6">
                <Icon name="Upload" size={24} className="text-gray-400" />
                <p className="mt-2 text-sm text-text-refined">
                  <span className="font-semibold">Click to upload</span> or drag and drop
                </p>
                <p className="text-xs text-gray-500">
                  PNG, JPG, or JPEG (max. 5MB each)
                </p>
              </div>
              <input
                ref={fileInputRef}
                type="file"
                className="hidden"
                multiple
                accept="image/*"
                onChange={handleImageChange}
              />
            </label>
          </div>
          
          {errors.images && (
            <p className="mt-2 text-sm text-error">{errors.images}</p>
          )}

          {previewUrls.length > 0 && (
            <div className="mt-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
              {previewUrls.map((url, index) => (
                <div key={index} className="relative group">
                  <img
                    src={url}
                    alt={`Vehicle preview ${index + 1}`}
                    className="w-full h-24 object-cover rounded-lg"
                  />
                  <button
                    type="button"
                    onClick={() => removeImage(index)}
                    className="absolute top-2 right-2 p-1 bg-error text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity"
                  >
                    <Icon name="X" size={14} />
                  </button>
                </div>
              ))}
            </div>
          )}
        </div>

        {/* Submit Button */}
        <div className="flex justify-end space-x-4">
          <button
            type="button"
            onClick={() => navigate(-1)}
            className="px-6 py-2 text-text-refined hover:text-cosmic-depth"
          >
            Cancel
          </button>
          <button
            type="submit"
            className="px-6 py-2 bg-stellar-gold text-cosmic-depth rounded-lg hover:bg-stellar-gold/90 font-medium"
          >
            Add Vehicle
          </button>
        </div>
      </form>

      {/* Success Message */}
      {showSuccessMessage && (
        <div className="fixed inset-0 flex items-center justify-center bg-black/50 z-50">
          <div className="bg-white rounded-xl p-8 max-w-md w-full mx-4 text-center">
            <div className="w-16 h-16 bg-success/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="CheckCircle" size={32} className="text-success" />
            </div>
            <h3 className="text-2xl font-bold text-cosmic-depth mb-2">
              Vehicle Added Successfully!
            </h3>
            <p className="text-text-refined mb-6">
              The new vehicle has been added to your fleet.
            </p>
            <div className="flex flex-col space-y-3">
              <button
                onClick={() => navigate('/admin-command-center', { state: { activeTab: 'Fleet' } })}
                className="w-full px-6 py-3 bg-stellar-gold text-cosmic-depth rounded-lg hover:bg-stellar-gold/90 font-medium"
              >
                View Fleet
              </button>
              <button
                onClick={() => {
                  setShowSuccessMessage(false);
                  setVehicleData({
                    make: '',
                    model: '',
                    year: new Date().getFullYear(),
                    category: 'Sedan',
                    price: '',
                    features: [],
                    transmission: 'Automatic',
                    seats: '',
                    description: '',
                    color: '',
                    vin: '',
                    licensePlate: '',
                    status: 'available',
                    location: '',
                    fuelEfficiency: '',
                    safetyRating: 5,
                    specialFeatures: []
                  });
                }}
                className="w-full px-6 py-3 border border-cosmic-depth text-cosmic-depth rounded-lg hover:bg-cosmic-depth/5"
              >
                Add Another Vehicle
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default AddVehicle;